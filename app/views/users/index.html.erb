<div class = "container">
  <h1>Users</h1>
  <% unless @users.empty? %>
    <% @users.each do |user|%>
      <a href="/users/<%= user.id %>" class="text-decoration-none">
        <%= render 'shared/user', user: user %>
      </a>
    <%end%>
  <% else%>
    <p>Please sign in or sign up to view user details.</p>
    <%= link_to 'Sign In', new_user_session_path %>
    <%= link_to 'Sign Up', new_user_registration_path %>
  <% end %>
</div>
